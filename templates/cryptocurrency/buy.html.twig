{% extends 'base.html.twig' %}

{% block title %}Buy {{ symbol }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-4 col-md-3 col-sm-2"></div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="card">
                    <div class="card-body">
                        <h2 class="mt-2">Buy</h2>
                        <p>
                            Cryptocurrency name: {{ symbol }} <br>
                            Price: $20000
                        </p>
                        <form method="post" action="{{ path('buy_cryptocurrency', {symbol}) }}">
                            <div>
                                <crypto-currency-converter crypto-currency-price="{{ price }}"/>
                            </div>
                            {{ form_row(form._token) }}
                            <button class="btn btn-success">Buy</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
