{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-4 col-md-3 col-sm-2"></div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="card">
                    <div class="card-body">
                        <h2 class="mt-2">Buy</h2>
                        <p>
                            Cryptocurrency name: {{ symbol }} <br>
                            Price: $20000
                        </p>
                        <div class="mb-3">
                            <label for="crypto_currency_transaction_quantity_form_quantity"
                                   class="form-label required">
                                Quantity
                            </label>
                            <input type="number" id="crypto_currency_transaction_quantity_form_quantity"
                                   name="crypto_currency_transaction_quantity_form[quantity]"
                                   required="required"
                                   inputmode="decimal"
                                   class="form-control"
                            >
                        </div>
                        <div class="mb-3">
                            <label for="crypto_currency_transaction_quantity_form_price"
                                   class="form-label required">
                                Price
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">â‚¬</span>
                                <input type="number" id="crypto_currency_transaction_quantity_form_price"
                                       name="crypto_currency_transaction_quantity_form[price]"
                                       required="required"
                                       class="form-control"
                                >
                            </div>
                        </div>

                        <button class="btn btn-success">Buy</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
