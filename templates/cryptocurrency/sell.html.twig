{% extends 'base.html.twig' %}

{% block title %}Sell {{ binanceCryptoCurrency.symbol }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3 col-sm-2"></div>
            <div class="col-md-6 col-sm-8">
                <div class="card">
                    <div class="card-body">
                        <h2 class="mt-2 text-center" style="font-weight: 300">Sell {{ binanceCryptoCurrency.symbol }}</h2>
                        <hr>
                        <ul class="list-group mt-3 mb-3">
                            <li class="list-group-item">
                                <div class="float-start">Price</div>
                                <div class="float-end">${{ "%.2f"|format(binanceCryptoCurrency.lastPrice) }}</div>
                            </li>

                            <li class="list-group-item">
                                <div class="float-start">Quantity</div>
                                <div class="float-end">{{ userCryptoCurrency.quantity }}</div>
                            </li>
                        </ul>

                        <div data-controller="crypto-currency-converter"
                             data-crypto-currency-converter-rate="{{ binanceCryptoCurrency.lastPrice }}"
                        >
                            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                            <div class="d-flex justify-content-between">
                                <div style="width: 45%;">{{ form_row(form.quantity) }}</div>
                                <div style="line-height: 6.5rem;">
                                    <i class="fa-solid fa-arrow-right-arrow-left"></i>
                                </div>
                                <div style="width: 45%;">{{ form_row(form.price) }}</div>
                            </div>

                            <div class="d-flex justify-content-center">
                                <button class="btn btn-primary mb-3" style="width: 150px;">Sell</button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}