{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-2"></div>

            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body text-center">
                        <span style="color: gray; text-transform: uppercase; font-weight: 500;">Your portfolio value</span>
                        <br>
                        {% set amount = "%.2f"|format(user.amount)|split('.') %}
                        <span style="font-size: 1.875rem; vertical-align: top">$</span>
                        <span style="font-size: 3rem">{{ amount[0] }}</span>
                        <span style="font-size: 1.875rem; vertical-align: top">.{{ amount[1] }}</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2"></div>

            <div class="col-sm-8 mt-5">
                <div class="card">
                    <table class="table table-borderless" style="border: none; margin: 0">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th class="w-50">Name</th>
                                <th>Quantity</th>
                                <th>Value</th>
                                <th>Change</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for cryptoCurrency in cryptoCurrencyList %}
                            <tr>
                                <th>{{ loop.index }}</th>
                                <td>{{ cryptoCurrency['symbol'] }}</td>
                                <td>{{ cryptoCurrency['quantity'] }}</td>
                                <td>${{ "%.2f"|format(cryptoCurrency['value'])}}</td>
                                <td class="danger-color">
{#                                    -0.5%#}
                                    {{ "%.2f"|format(cryptoCurrency['priceChangePercent']) }}%
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}